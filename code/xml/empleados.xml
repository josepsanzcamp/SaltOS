SELECT LPAD(a.id,".intval(CONFIG("zero_padding_digits")).",0) id,
	 CONCAT('link:contactos(',-a.id,'):',a.nombre)  nombre,
	 CONCAT('tel:',tel_fijo) tel_fijo,
	 CONCAT('tel:',tel_movil) tel_movil,
	 CONCAT('mailto:',email) email,
