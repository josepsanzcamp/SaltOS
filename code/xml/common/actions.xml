<root>
	<actions>
		<!-- ACTIONS FOR EACH REGISTER -->
		<view>
			<label lang="true">view</label>
			<onclick>view(ID)</onclick>
			<icon eval="true">ICON("view")</icon>
		</view>
		<edit>
			<label lang="true">edit</label>
			<onclick>edit(ID)</onclick>
			<icon eval="true">ICON("edit")</icon>
		</edit>
		<copy>
			<label lang="true">copy</label>
			<onclick>copy(ID)</onclick>
			<icon eval="true">ICON("copy")</icon>
		</copy>
		<mail>
			<label lang="true">mail</label>
			<onclick>mail2(ID)</onclick>
			<icon eval="true">ICON("correo")</icon>
		</mail>
		<delete>
			<label lang="true">delete</label>
			<onclick>delete1(ID)</onclick>
			<icon eval="true">ICON("delete")</icon>
		</delete>
		<pdf2>
			<label lang="true">pdf</label>
			<onclick>pdf2(ID)</onclick>
			<icon eval="true">ICON("pdf")</icon>
		</pdf2>
		<view2 ifeval="!ismobile()">
			<label lang="true">view2</label>
			<onclick>view2(ID)</onclick>
			<icon eval="true">ICON("viewpdf")</icon>
		</view2>
		<vcard>
			<label lang="true">vcard</label>
			<onclick>vcard(ID)</onclick>
			<icon eval="true">ICON("vcard")</icon>
		</vcard>
		<qrcode ifeval="!ismobile()">
			<label lang="true">qrcode</label>
			<onclick>qrcode(ID)</onclick>
			<icon eval="true">ICON("qrcode")</icon>
		</qrcode>
		<pdf2filter ifeval="!ismobile()">
			<label lang="true">pdf</label>
			<onclick>pdf2filter(ID)</onclick>
			<icon eval="true">ICON("pdf")</icon>
		</pdf2filter>
		<view2filter ifeval="!ismobile()">
			<label lang="true">view2</label>
			<onclick>view2filter(ID)</onclick>
			<icon eval="true">ICON("viewpdf")</icon>
		</view2filter>
	</actions>
	<actions2>
		<icon eval="true">ICON("dropdown")</icon>
		<label lang="true">actions</label>
	</actions2>
	<!-- SORT HEADER FOR LIST -->
	<sort>
		<onclick>sort('FIELD')</onclick>
		<labelasc lang="true">sortasc</labelasc>
		<iconascin eval="true">ICON("sortasc")." ui-icon-asc ui-icon-in"</iconascin>
		<iconascout eval="true">ICON("sortasc")." ui-icon-asc ui-icon-out"</iconascout>
		<labeldesc lang="true">sortdesc</labeldesc>
		<icondescin eval="true">ICON("sortdesc")." ui-icon-desc ui-icon-in"</icondescin>
		<icondescout eval="true">ICON("sortdesc")." ui-icon-desc ui-icon-out"</icondescout>
	</sort>
	<!-- NODATA TEXT FOR LIST -->
	<nodata>
		<label lang="true">nodata</label>
	</nodata>
</root>
