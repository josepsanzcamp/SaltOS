<root>
	<fieldset>
		<buttons>true</buttons>
		<title lang="true">gcalendar</title>
		<width>500px</width>
		<row>
			<field>
				<type>label</type>
				<label lang="true">prefgcalendar</label>
				<colspan>3</colspan>
				<class>center bold</class>
			</field>
		</row>
		<row>
			<field>
				<type>separator</type>
			</field>
		</row>
		<row>
			<field>
				<type>label</type>
				<label lang="true">prefgcalendar2</label>
				<colspan>3</colspan>
				<class>left siwrap</class>
			</field>
		</row>
		<row>
			<field>
				<type>separator</type>
			</field>
		</row>
		<row>
			<field>
				<name>id</name>
				<type>hidden</type>
			</field>
			<field>
				<name>id_usuario</name>
				<type>hidden</type>
			</field>
			<field>
				<name>login</name>
				<label lang="true">logingcalendar</label>
				<type>text</type>
				<width>240px</width>
				<width2>1px</width2>
				<readonly global="id" eval="true">$id>=0?"false":"true"</readonly>
				<speech>true</speech>
			</field>
		</row>
		<row>
			<field>
				<name>password</name>
				<label lang="true">password</label>
				<type>password</type>
				<width>60px</width>
				<readonly global="id" eval="true">$id>=0?"false":"true"</readonly>
			</field>
		</row>
	</fieldset>
</root>
