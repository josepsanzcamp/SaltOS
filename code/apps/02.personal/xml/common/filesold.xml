<root>
    <fieldset ifeval="!ismobile()">
        <width>700px</width>
        <title lang="true">attachments</title>
        <icon eval="true">ICON("files")</icon>
        <popup>true</popup>
        <head>
            <field>
                <type>checkbox</type>
                <class3>master shortcut_ctrl_a</class3>
                <class2>thead shortcut_ctrl_a</class2>
                <width>1px</width>
                <value>1</value>
            </field>
            <field>
                <type>label</type>
                <label lang="true">username</label>
                <class>thead</class>
            </field>
            <field>
                <type>label</type>
                <label lang="true">grupo</label>
                <class>thead</class>
            </field>
            <field>
                <type>label</type>
                <label lang="true">datetime</label>
                <class>thead</class>
            </field>
            <field>
                <type>label</type>
                <label lang="true">fichero</label>
                <class>thead</class>
            </field>
            <field>
                <type>label</type>
                <label lang="true">size</label>
                <class>thead</class>
            </field>
            <field>
                <type>separator</type>
                <class>thead</class>
                <colspan>100</colspan>
            </field>
        </head>
        <row>
            <field>
                <name>id</name>
                <type>hidden</type>
            </field>
            <field>
                <name>id_registro</name>
                <type>hidden</type>
            </field>
            <field>
                <name>zip</name>
                <type>checkbox</type>
                <class3>slave</class3>
                <class2>tbody</class2>
                <width>1px</width>
                <value>1</value>
                <onchange>$(this).attr('cancel',true);</onchange>
            </field>
            <field>
                <name>usuario</name>
                <type>label</type>
                <class>tbody</class>
            </field>
            <field>
                <name>grupo</name>
                <type>label</type>
                <class>tbody</class>
            </field>
            <field>
                <name>datetime</name>
                <type>label</type>
                <class>tbody</class>
            </field>
            <field>
                <name>fichero</name>
                <type>label</type>
                <class>tbody</class>
            </field>
            <field>
                <name>fichero_size</name>
                <type>label</type>
                <class>tbody</class>
            </field>
            <field>
                <name>download</name>
                <label lang="true">download</label>
                <type>link</type>
                <width>1px</width>
                <icon eval="true">ICON("save")</icon>
                <class>tbody</class>
            </field>
            <field>
                <name>viewpdf</name>
                <type>link</type>
                <label lang="true">view2</label>
                <width>1px</width>
                <icon eval="true">ICON("viewpdf")</icon>
                <class>tbody</class>
            </field>
            <field global="id" ifeval="$id&gt;=0">
                <type>checkbox</type>
                <label lang="true">delete</label>
                <name>fichero_del</name>
                <value>1</value>
                <width>1px</width>
                <width2>1px</width2>
                <icon eval="true">ICON("delete")</icon>
                <class>tbody</class>
                <class2>tbody</class2>
            </field>
        </row>
        <tail>
            <field>
                <type>separator</type>
            </field>
        </tail>
        <tail>
            <class>helperbuttons</class>
            <field>
                <type>button</type>
                <value lang="true">zipformat</value>
                <tip lang="true">actioncompress</tip>
                <class>nowrap</class>
                <onclick>compress('zip')</onclick>
                <icon eval="true">ICON("save")</icon>
                <width>1px</width>
            </field>
            <field>
                <type>button</type>
                <value lang="true">tarformat</value>
                <tip lang="true">actioncompress</tip>
                <class>nowrap</class>
                <onclick>compress('tar')</onclick>
                <icon eval="true">ICON("save")</icon>
                <width>1px</width>
            </field>
            <field>
                <type>button</type>
                <value lang="true">gzipformat</value>
                <tip lang="true">actioncompress</tip>
                <class>nowrap</class>
                <onclick>compress('gzip')</onclick>
                <icon eval="true">ICON("save")</icon>
                <width>1px</width>
            </field>
            <field>
                <type>button</type>
                <value lang="true">bzipformat</value>
                <tip lang="true">actioncompress</tip>
                <class>left</class>
                <onclick>compress('bzip')</onclick>
                <icon eval="true">ICON("save")</icon>
            </field>
        </tail>
    </fieldset>
    <fieldset ifeval="ismobile()">
        <title lang="true">attachments</title>
        <icon eval="true">ICON("form")</icon>
        <row>
            <field>
                <name>id</name>
                <type>hidden</type>
            </field>
            <field>
                <name>id_registro</name>
                <type>hidden</type>
            </field>
            <field>
                <name>usuario</name>
                <type>text</type>
                <class>tbody</class>
                <label lang="true">username</label>
                <readonly>true</readonly>
            </field>
            <field>
                <name>grupo</name>
                <type>text</type>
                <class>tbody</class>
                <label lang="true">grupo</label>
                <readonly>true</readonly>
            </field>
            <field>
                <name>datetime</name>
                <type>text</type>
                <class>tbody</class>
                <label lang="true">datetime</label>
                <readonly>true</readonly>
            </field>
            <field>
                <name>fichero</name>
                <type>text</type>
                <class>tbody</class>
                <label lang="true">fichero</label>
                <readonly>true</readonly>
            </field>
            <field>
                <name>fichero_size</name>
                <type>text</type>
                <class>tbody</class>
                <label lang="true">size</label>
                <readonly>true</readonly>
            </field>
            <field>
                <name>download</name>
                <label lang="true">download</label>
                <type>link</type>
                <width>1px</width>
                <icon eval="true">ICON("save")</icon>
                <class>tbody</class>
            </field>
        </row>
    </fieldset>
</root>
